{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports":true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "cypress", "**/*.spec.ts", "**/*.spec.tsx"]
}
